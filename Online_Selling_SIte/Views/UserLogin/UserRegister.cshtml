@model Online_Selling_SIte.Models.User
@{
    Layout = null;
}
<link href="~/Content/bootstrap/css/bootstrap.css" rel="stylesheet" />
<script src="~/Content/plugins/jQuery/jQuery-2.1.3.min.js"></script>
<style>
    .justify-content-center {
        -webkit-box-pack: center !important;
        -ms-flex-pack: center !important;
        justify-content: center !important;
    }

    .form-group {
        margin-bottom: 1rem;
    }

    .billing-form .form-control {
        font-weight: 300;
        border: transparent !important;
        border: 1px solid rgba(0, 0, 0, 0.1) !important;
        height: 58px !important;
        padding-left: 15px;
        padding-right: 15px;
        background: transparent !important;
        color: rgba(0, 0, 0, 0.4) !important;
        font-size: 14px;
        border-radius: 0px;
        -webkit-box-shadow: none !important;
        box-shadow: none !important;
    }

    .btn {
        display: inline-block;
        padding: 12px 80px;
        font-size: 20px;
        border-radius: 41px;
        font-weight: normal;
        line-height: 1.42857143;
        text-align: center;
        white-space: nowrap;
        vertical-align: middle;
        -ms-touch-action: manipulation;
        touch-action: manipulation;
        cursor: pointer;
        border: 1px solid transparent;
        border-radius: 30px;
    }

        .btn.btn-primary {
            background: #ffa45c;
            border: 1px solid #ffa45c;
            color: #fff;
        }

    body {
        font-family: "Open Sans", Arial, sans-serif;
        background: #fff;
        font-size: 15px;
        line-height: 1.8;
        font-weight: 400;
        color: gray;
    }

    .cart-detail .btn-primary {
        display: block;
        width: 109%;
    }
</style>
<html>

<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-8 ftco-animate">
                    <form action="#" class="billing-form" method="post">
                        <h3 class="mb-4 billing-heading" style="text-align:center">Create Account</h3>
                        <div class="row align-items-end">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="firstname">Name</label>
                                    @Html.TextBoxFor(a => a.Name, htmlAttributes: new { @type = "text", @class = "form-control", @required = "required", @placeholder = "Enter First Name" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Email">Email Address</label>
                                    @Html.TextBoxFor(a => a.Email, htmlAttributes: new { @type = "email", @id = "txtEmailId", @class = "form-control", @required = "required", @placeholder = "Enter Email" })
                                </div>
                                
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Password">Password</label>
                                    @Html.TextBoxFor(a => a.Password, htmlAttributes: new { @type = "password", @required = "required", @class = "form-control", @placeholder = "Enter Password" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="mobileno"> Mobile No.</label>
                                    @Html.TextBoxFor(a => a.Phone, htmlAttributes: new { @type = "text", @class = "form-control", @required = "required", @placeholder = "Enter Mobile number" })
                                </div>
                            </div>
                            <div class="w-100"></div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Address">Street Address</label>
                                    @Html.TextBoxFor(a => a.Address, htmlAttributes: new { @type = "text", @class = "form-control", @required = "required", @placeholder = "Enter House number and street name" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="TownCity">Town / City</label>
                                    @Html.TextBoxFor(a => a.City, htmlAttributes: new { @type = "text", @class = "form-control", @required = "required", @placeholder = "Enter Town/City" })
                                </div>
                               
                            </div>
                            <div class="w-100"></div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="postcodezip">Postcode / ZIP *</label>
                                    @Html.TextBoxFor(a => a.Pincode, htmlAttributes: new { @type = "text", @class = "form-control", @required = "required", @placeholder = "Enter Pincode" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="State">State</label>
                                    @Html.TextBoxFor(a => a.State, htmlAttributes: new { @type = "text", @class = "form-control", @required = "required", @placeholder = "Enter State" })
                                </div>
                            </div>
                            <div class="w-100"></div>
                            <div class="col-md-5">
                                <div class="form-group">
                                    <label class="mr-3" for="IsActive">
                                        <input type="checkbox" name="Isactive"> IsActive
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Submit" id="btnValidate" class="btn btn-primary py-3 px-5">
                            </div>
                        </div>
                    </form><!-- END -->
                </div>
            </div>
        </div>
    </section>


</body>
</html>

